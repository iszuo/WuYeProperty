@model IEnumerable<WYsystem.Models.w_system_params>

@{
    ViewBag.Title = "系统参数管理";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h2>系统参数管理</h2></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2" style="text-align:right;line-height:40px;">
                            请选择参数列表：
                        </div>
                        <div class="col-md-2">
                            <select name="type" class="form-control">
                                <option value="功能信息">功能信息</option>
                                <option value="单元信息">单元信息</option>
                                <option value="装修标准">装修标准</option>
                                <option value="朝向信息">朝向信息</option>
                                <option value="规格信息">规格信息</option>
                                <option value="楼宇信息">楼宇信息</option>
                                <option value="周边信息">周边信息</option>
                            </select>
                        </div>
                    </div>
                    
                </div>
                <table class="table" style="tet">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.code)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.type)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @if (Model.Count() < 1)
                    {
                        <tr class="success">
                            <th colspan="4" style="text-align:center;">请添加系统参数</th>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr class="success">
                            <td>
                                @Html.DisplayFor(modelItem => item.code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                            <td>
                                @Html.ActionLink("编辑", "Edit", new { id = item.id }) |
                                @Html.ActionLink("详情", "Details", new { id = item.id }) |
                                @Html.ActionLink("删除", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }
                </table>
                <!-- 实行添加操作 -->
                <form action="/System/Create" method="post" style="margin-top:40px;">
                    <table class="table">
                        <tr>
                            <td style="text-align:right;line-height:40px;">代码：</td>
                            <td>
                                <input class="form-control" type="text" name="code" required placeholder="请输入代码！" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right; line-height: 40px;">名称：</td>
                            <td>
                                <input class="form-control" type="text" name="name" required placeholder="请输入名称！" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right; line-height: 40px;">类型：</td>
                            <td>
                                <select name="type" class="form-control">
                                    <option value="功能信息">功能信息</option>
                                    <option value="单元信息">单元信息</option>
                                    <option value="装修标准">装修标准</option>
                                    <option value="朝向信息">朝向信息</option>
                                    <option value="规格信息">规格信息</option>
                                    <option value="楼宇信息">楼宇信息</option>
                                    <option value="周边信息">周边信息</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                                <input type="submit" class="btn btn-default" value="保存" />
                                <input type="button" class="btn btn-default" onclick="javascript: window.history.back()" value="返回" />
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>