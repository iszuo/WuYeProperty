@model WYsystem.Models.w_room_info

@{
    ViewBag.Title = "小区信息编辑";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h1>&nbsp;&nbsp;小区信息编辑</h1>
                    <form action="/Admin/UpdateRoom" method="post" onsubmit="return checkForm()">
                        <table class="table table-bordered" style="margin-top:10px;">
                            <tr>
                                <th style="text-align:right;">小区名称：</th>
                                <td>
                                    <!-- 讲商品信息隐藏 -->
                                    <input type="hidden" name="id" value="@Model.id" />
                                    <input type="text" name="name" value="@Model.name" class="form-control" placeholder="请输入小区名称" />
                                </td>
                                <th style="text-align:right;">联系电话：</th>
                                <td>
                                    <input type="text" name="phone" value="@Model.phone" class="form-control" placeholder="请输入联系电话" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">主要负责人：</th>
                                <td>
                                    <input type="text" name="link_name" value="@Model.link_name" class="form-control" placeholder="请输入主要负责人" />
                                </td>
                                <th style="text-align:right;">停车声面积：</th>
                                <td>
                                    <input type="text" name="stop_car_area" value="@Model.stop_car_area" class="form-control" placeholder="请输入停车声面积" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">建造日期：</th>
                                <td>
                                    <input type="text" name="construct_date" value="@Model.construct_date" class="form-control" placeholder="请输入建造日期（年/月/日）" />
                                </td>
                                <th style="text-align:right;">道路面积：</th>
                                <td>
                                    <input type="text" name="road_area" value="@Model.road_area" class="form-control" placeholder="请输入道路面积" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">建筑面积：</th>
                                <td>
                                    <input type="text" name="romm_area" value="@Model.romm_area" class="form-control" placeholder="请输入建筑面积" />
                                </td>
                                <th style="text-align:right;">绿化面积：</th>
                                <td>
                                    <input type="text" name="lh_area" value="@Model.lh_area" class="form-control" placeholder="请输入绿化面积" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">楼宇数量：</th>
                                <td>
                                    <input type="number" name="room_number" value="@Model.room_number" class="form-control" placeholder="请输入楼宇数量" />
                                </td>
                                <th style="text-align:right;">小区地址：</th>
                                <td>
                                    <input type="text" name="address" value="@Model.address" class="form-control" placeholder="请输入小区地址" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">小区说明：</th>
                                <td colspan="3">
                                    <input type="text" name="remark" value="@Model.remark" class="form-control" placeholder="请输入小区说明" />
                                </td>
                            </tr>
                            <tr>
                                <th colspan="4" style="text-align:center;">
                                    <input type="submit" class="btn btn-default" value="保存" />
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <input type="button" class="btn btn-default" onclick="javascript: window.history.back()" value="返回" />
                                </th>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function checkForm() {
        if ($('[name="name"]').val().length < 1) {
            alert("请输入小区名称");
            $('[name="name"]').focus();
            return false;
        }
        if ($('[name="phone"]').val().length < 1) {
            alert("请输入联系电话");
            $('[name="phone"]').focus();
            return false;
        }
        if ($('[name="link_name"]').val().length < 1) {
            alert("请输入主要负责人");
            $('[name="link_name"]').focus();
            return false;
        }
        if ($('[name="stop_car_area"]').val().length < 1) {
            alert("请输入停车声面积");
            $('[name="stop_car_area"]').focus();
            return false;
        }
        if ($('[name="construct_date"]').val().length < 1) {
            alert("请输入建造日期");
            $('[name="construct_date"]').focus();
            return false;
        }
        if ($('[name="road_area"]').val().length < 1) {
            alert("请输入道路面积");
            $('[name="road_area"]').focus();
            return false;
        }
        if ($('[name="romm_area"]').val().length < 1) {
            alert("请输入建筑面积");
            $('[name="romm_area"]').focus();
            return false;
        }
        if ($('[name="lh_area"]').val().length < 1) {
            alert("请输入绿化面积");
            $('[name="lh_area"]').focus();
            return false;
        }
        if ($('[name="room_number"]').val().length < 1) {
            alert("请输入楼宇数量");
            $('[name="room_number"]').focus();
            return false;
        }
        if ($('[name="address"]').val().length < 1) {
            alert("请输入小区地址");
            $('[name="address"]').focus();
            return false;
        }
        if ($('[name="remark"]').val().length < 1) {
            alert("请输入小区说明");
            $('[name="remark"]').focus();
            return false;
        }
    }
</script>