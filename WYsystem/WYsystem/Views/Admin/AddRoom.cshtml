@model WYsystem.Models.w_room_info

@{
    ViewBag.Title = "小区添加";
    Layout = "~/Views/Shared/_BackAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row cm-fix-height">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h1>&nbsp;&nbsp;小区信息添加</h1>
                    <form id="addRoom" action="/Admin/AddRoom" method="post" onsubmit="return checkForm()">
                        <table class="table table-bordered" style="margin-top:10px;">
                            <tr>
                                <th style="text-align:right;">小区名称：</th>
                                <td>
                                    <input type="text" name="name" value="" class="form-control" placeholder="请输入小区名称" />
                                </td>
                                <th style="text-align:right;">联系电话：</th>
                                <td>
                                    <input type="number" name="phone" value="" class="form-control" placeholder="请输入联系电话" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">主要负责人：</th>
                                <td>
                                    <input type="text" name="link_name" value="" class="form-control" placeholder="请输入主要负责人" />
                                </td>
                                <th style="text-align:right;">停车声面积：</th>
                                <td>
                                    <input type="text" name="stop_car_area" value="" class="form-control" placeholder="请输入停车声面积" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">建造日期：</th>
                                <td>
                                    <input type="text" name="construct_date" value="" class="form-control" placeholder="请输入建造日期（年/月/日）" />
                                </td>
                                <th style="text-align:right;">道路面积：</th>
                                <td>
                                    <input type="text" name="road_area" value="" class="form-control" placeholder="请输入道路面积" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">建筑面积：</th>
                                <td>
                                    <input type="text" name="romm_area" value="" class="form-control" placeholder="请输入建筑面积" />
                                </td>
                                <th style="text-align:right;">绿化面积：</th>
                                <td>
                                    <input type="text" name="lh_area" value="" class="form-control" placeholder="请输入绿化面积" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">楼宇数量：</th>
                                <td>
                                    <input type="number" name="room_number" value="" class="form-control" placeholder="请输入楼宇数量" />
                                </td>
                                <th style="text-align:right;">小区地址：</th>
                                <td>
                                    <input type="text" name="address" value="" class="form-control" placeholder="请输入小区地址" />
                                </td>
                            </tr>
                            <tr>
                                <th style="text-align:right;">小区说明：</th>
                                <td colspan="3">
                                    <input type="text" name="remark" value="" class="form-control" placeholder="请输入小区说明" />
                                </td>
                            </tr>
                            <tr>
                                <th colspan="4" style="text-align:center;">
                                    <input type="submit" class="btn btn-default" value="添加" />
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <input type="button" class="btn btn-default" onclick="javascript: window.history.back()" value="返回" />
                                </th>
                            </tr>
                        </table>
                        <div style="text-align:center;">
                            <span style="color:red;">@ViewBag.erroy</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

